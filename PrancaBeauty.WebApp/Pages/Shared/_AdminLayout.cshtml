<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentCulture.Parent.Name">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>@Localizer["AdminPanel"] - @ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Main/img/favicon.ico">

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css">

    <!-- Google Font: Source Sans Pro -->
    @*<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">*@

    <!-- KendoUI CSS -->
    <link href="~/lib/KendoUI/css/Theme/Bs-Kendo-Theme.min.css" rel="stylesheet" />
    
    @if (ViewData["LangDir"].ToString() == "rtl")
    {
        <!-- bootstrap rtl -->
        <link rel="stylesheet" href="/Admin/css/bootstrap-rtl.min.css">

        <!-- Theme style -->
        <link rel="stylesheet" href="/Admin/css/adminlte.min.css">

        <!-- template rtl version -->
        <link rel="stylesheet" href="/Admin/css/custom-style-rtl.css">

        <!-- Kendo Rtl -->
        <link href="~/lib/KendoUI/css/kendo.rtl.min.css" rel="stylesheet" />
    }
    else
    {
        <!-- bootstrap -->
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

        <!-- Theme style -->
        <link rel="stylesheet" href="/Admin/css/adminlte.min.css">

        <!-- template rtl version -->
        <link rel="stylesheet" href="/Admin/css/custom-style-ltr.css">

        <!-- Kendo Ltr -->
        <link href="~/lib/KendoUI/css/kendo.ltr.min.css" rel="stylesheet" />
    }

    <!-- SweetAlert -->
    <link href="~/lib/sweetalert/sweetalert.min.css" rel="stylesheet" />

    @RenderSection("Styles", false)

    <!-- jQuery -->
    <script src="/lib/jquery/jquery.min.js"></script>

    <!-- KenoUI Js -->
    <script src="~/lib/KendoUI/js/jszip.min.js"></script>
    <script src="~/lib/KendoUI/js/kendo.all.min.js"></script>
    <script src="~/lib/KendoUI/js/kendo.aspnetmvc.min.js"></script>

</head>
<body class="hold-transition sidebar-mini">
    <div class="loading">
        <img src=/Main/img/loading.gif>
    </div>

    @Html.AntiForgeryToken()
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/@System.Globalization.CultureInfo.CurrentCulture.Parent.Name" class="nav-link">@Localizer["ShopMainPage"]</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/@System.Globalization.CultureInfo.CurrentCulture.Parent.Name/User/Index" class="nav-link">@Localizer["UserPanel"]</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav mr-auto">
                <!-- Messages Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-comments-o"></i>
                        <span class="badge badge-danger navbar-badge">3</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-left">
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="/Admin/img/user1-128x128.jpg" alt="User Avatar" class="img-size-50 ml-3 img-circle">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        حسام موسوی
                                        <span class="float-left text-sm text-danger"><i class="fa fa-star"></i></span>
                                    </h3>
                                    <p class="text-sm">با من تماس بگیر لطفا...</p>
                                    <p class="text-sm text-muted"><i class="fa fa-clock-o mr-1"></i> 4 ساعت قبل</p>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="/Admin/img/user8-128x128.jpg" alt="User Avatar" class="img-size-50 img-circle ml-3">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        پیمان احمدی
                                        <span class="float-left text-sm text-muted"><i class="fa fa-star"></i></span>
                                    </h3>
                                    <p class="text-sm">من پیامتو دریافت کردم</p>
                                    <p class="text-sm text-muted"><i class="fa fa-clock-o mr-1"></i> 4 ساعت قبل</p>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <!-- Message Start -->
                            <div class="media">
                                <img src="/Admin/img/user3-128x128.jpg" alt="User Avatar" class="img-size-50 img-circle ml-3">
                                <div class="media-body">
                                    <h3 class="dropdown-item-title">
                                        سارا وکیلی
                                        <span class="float-left text-sm text-warning"><i class="fa fa-star"></i></span>
                                    </h3>
                                    <p class="text-sm">پروژه اتون عالی بود مرسی واقعا</p>
                                    <p class="text-sm text-muted"><i class="fa fa-clock-o mr-1"></i>4 ساعت قبل</p>
                                </div>
                            </div>
                            <!-- Message End -->
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">مشاهده همه پیام‌ها</a>
                    </div>
                </li>
                <!-- Notifications Dropdown Menu -->
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-bell-o"></i>
                        <span class="badge badge-warning navbar-badge">15</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-left">
                        <span class="dropdown-item dropdown-header">15 نوتیفیکیشن</span>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-envelope ml-2"></i> 4 پیام جدید
                            <span class="float-left text-muted text-sm">3 دقیقه</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-users ml-2"></i> 8 درخواست دوستی
                            <span class="float-left text-muted text-sm">12 ساعت</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-file ml-2"></i> 3 گزارش جدید
                            <span class="float-left text-muted text-sm">2 روز</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">مشاهده همه نوتیفیکیشن</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#">
                        <i class="fa fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Main/img/logo/logo.png" alt="PrancaBeauty Logo" class="brand-image elevation-3">
                <span class="brand-text font-weight-light">@Localizer["AdminPanel"]</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <div>
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="@(await User.GetUserProfileImgUrlAsync(Context))" class="img-circle elevation-2" style="width:32px; height:32px;" alt="@User.GetUserDetails().GivenName @User.GetUserDetails().SurName">
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">@User.GetUserDetails().GivenName @User.GetUserDetails().SurName</a>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                            with font-awesome or any other icon font library -->
                            <li class="nav-item">
                                <a href="/@ViewData["Culture"]/Admin/Index" class="nav-link active">
                                    <i class="nav-icon fa fa-dashboard"></i>
                                    <p>
                                        @Localizer["Dashboard"]
                                    </p>
                                </a>
                            </li>

                            @if (User.IsInRole(Roles.CanManageCategories))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fa fa-shield"></i>
                                        <p>
                                            @Localizer["ManageCategories"]
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        @if (User.IsInRole(Roles.CanAddCategory))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Category/Add" class="nav-link active">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["AddNewCategory"]</p>
                                                </a>
                                            </li>
                                        }
                                        @if (User.IsInRole(Roles.CanViewListCategories))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Category/List" class="nav-link">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["ListCategories"]</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole(Roles.CanManageSlider))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fa fa-shield"></i>
                                        <p>
                                            @Localizer["ManageSlider"]
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        @if (User.IsInRole(Roles.CanAddSlide))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Slider/Add" class="nav-link active">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["AddNewSlide"]</p>
                                                </a>
                                            </li>
                                        }
                                        @if (User.IsInRole(Roles.CanViewListSlider))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Slider/List" class="nav-link">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["ListSlider"]</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole(Roles.CanManageAccessLevel))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fa fa-shield"></i>
                                        <p>
                                            @Localizer["ManageAccessLevel"]
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        @if (User.IsInRole(Roles.CanAddAccessLevel))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/AccessLevel/Add" class="nav-link active">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["AddNewAccessLevel"]</p>
                                                </a>
                                            </li>
                                        }
                                        @if (User.IsInRole(Roles.CanViewListAccessLevel))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/AccessLevel/List" class="nav-link">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["ListAccessLevel"]</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole(Roles.CanManageUsers))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fa fa-users"></i>
                                        <p>
                                            @Localizer["ManageUsers"]
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        @*@if (User.IsInRole(Roles.CanAddUsers))
                                            {
                                                <li class="nav-item">
                                                    <a href="#" class="nav-link active">
                                                        <i class="fa fa-circle-o nav-icon"></i>
                                                        <p>@Localizer["AddNewUsers"]</p>
                                                    </a>
                                                </li>
                                            }*@
                                        @if (User.IsInRole(Roles.CanViewListUsers))
                                        {
                                            <li class="nav-item">
                                                <a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Users/List" class="nav-link">
                                                    <i class="fa fa-circle-o nav-icon"></i>
                                                    <p>@Localizer["ListUsers"]</p>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            <li class="nav-item">
                                <a onclick="Logout('@Context.Request.GetCurrentUrl()')" href="#Logout" class="nav-link">
                                    <i class="nav-icon fa fa-sign-out"></i>
                                    <p>
                                        @Localizer["Logout"]
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        @RenderBody()
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
                <h5>Title</h5>
                <p>Sidebar content</p>
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Anything you want
            </div>
            <!-- Default to the left -->
            <strong>CopyLeft &copy; 2018 <a href="http://github.com/hesammousavi/">حسام موسوی</a>.</strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- Bootstrap 4 -->
    <script src="/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- SweetAlert -->
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

    <!-- Shared Scripts -->
    <script src="/@ViewData["Culture"]/RenderStaticFiles/Custom.js"></script>
    <script src="~/Shared/js/SharedScript.min.js"></script>


    <!-- AdminLTE App -->
    <script src="/Admin/js/adminlte.min.js"></script>

    @RenderSection("scripts", false)
</body>
</html>
