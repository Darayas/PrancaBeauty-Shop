@page "/{culture}/Shared/Compo/ComboFileSelector"
@model PrancaBeauty.WebApp.Pages.Shared.Components.CompoFileManager.CompoFileSelector.Compo_FileSelectorModel

<div id="CompoFileSelector">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Data.Count() == 0)
            {
                <div class="alert alert-info mt-2">
                    @Html.Raw(Localizer["NoFileSeleted", "AddFile()"])
                </div>
            }
            else
            {
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Localizer["FileTitle"]</th>
                            <th>@Localizer["FileName"]</th>
                            <th>@Localizer["MimeType"]</th>
                            <th>@Localizer["FileSize"]</th>
                            <th>@Localizer["FileServerName"]</th>
                            <th class="thBtnAdd"><button type="button" class="btn btn-success btn-sm" onclick="AddFile()"><i class="fa fa-plus"></i></button></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Title</td>
                                <td>@item.FileName</td>
                                <td>@item.MimeType</td>
                                <td>@item.FileSize</td>
                                <td>@item.FileServerName</td>
                                <td>
                                    <a class="text-info mr-1 ml-1" onclick=""><i class="fa fa-download"></i></a>
                                    <a class="text-danger mr-1 ml-1" onclick=""><i class="fa fa-times"></i></a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
<script>
    function AddFile() {

    }
</script>