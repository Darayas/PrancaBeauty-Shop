@page "/{cultuer}/User/Products/Edit/{Id}"
@model PrancaBeauty.WebApp.Pages.User.Products.EditModel
@{
    ViewData["Title"] = Localizer["EditProduct", Model.Input.Title];
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

@inject PrancaBeauty.Application.Apps.Languages.ILanguageApplication  _LanguageApplication
@inject PrancaBeauty.Application.Apps.Settings.ISettingApplication _SettingApplication

@section breadcrumbs{
    <div class="breadcrumbs_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content">
                        <ul>
                            <li><a href="/@ViewData["Culture"]">@Localizer["Home"]</a></li>
                            <li><a href="/@ViewData["Culture"]/User/Index">@Localizer["Dashboard"]</a></li>
                            <li><a href="/@ViewData["Culture"]/User/Products/List">@Localizer["ProductList"]</a></li>
                            <li>@Localizer["EditProduct", Model.Input.Title]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<form id="FrmEditProdcut">
    <input asp-for="Input.Id" type="hidden"/>
    @if (Model.Input.IsDraft == true)
    {
        <input asp-for="Input.IsDraft" value="false" type="hidden" />
    }
    <div class="row">
        <div class="col-md-4">

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            @Localizer["PublicDetials"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <LoadComponent id="ProductTopicCompo"
                                               context="HttpContext"
                                               data='new viCompo_Combo_Topics { FieldName="Input.TopicId",TopicId=Model.Input.TopicId}'
                                               url="/@ViewData["culture"]/Shared/Compo/ComboTopics"></LoadComponent>
                            </div>

                            <div class="form-group">
                                <LoadComponent id="ProductCategoryCompo"
                                               context="HttpContext"
                                               data='new viCompo_Combo_Categories { FieldName="Input.CategoryId",CategoryId=Model.Input.CategoryId}'
                                               url="/@ViewData["culture"]/Shared/Compo/ComboCategories"></LoadComponent>
                            </div>

                            <div class="form-group">
                                <label asp-for="Input.Title"></label>
                                <input asp-for="Input.Title" class="form-control" />
                            </div>

                            <div class="form-group">
                                <LoadComponent id="PriceCompo"
                                               context="HttpContext"
                                               data='new viCompo_Input_Price { FieldName="Input.Price",Price=Model.Input.Price,LangId=Model.LangId}'
                                               url="/@ViewData["culture"]/Shared/Compo/ComboInputPrice"></LoadComponent>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["Settings"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Input.Date"></label>
                                <input asp-for="Input.Date" class="form-control Date text-center dir-ltr" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["ProductProperties"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body" id="ProductProperties">
                            <div class="alert alert-info text-center">
                                @Localizer["PleaseSelectTopic"]
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            @Localizer["Keywords"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <LoadComponent id="ProductKeywordsCompo"
                                           context="HttpContext"
                                           data='new viCompo_Input_Keywords { FieldName="Input.ProductKeywords",ProductId=Model.Input.Id}'
                                           url="/@ViewData["culture"]/User/Products/Compo/CompoInputKeyword"></LoadComponent>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["SEO"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Input.MetaTagCanonical"></label>
                                <input asp-for="Input.MetaTagCanonical" class="form-control text-left" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.MetaTagKeyword"></label>
                                <textarea rows="2" asp-for="Input.MetaTagKeyword" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.MetaTagDescreption"></label>
                                <textarea rows="4" asp-for="Input.MetaTagDescreption" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["ProductImages"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <LoadComponent id="ProductImagesCompo"
                                           context="HttpContext"
                                           data='new viCompo_FileSelector {ContainerId="ProductImagesCompo" ,FieldName="Input.ProductImagesId",MaxFileCount=10, MaxFileSize=1510007,AllowedMimeType="image/jpg, image/jpeg, image/png",SelectedFilesId=Model.Input.ProductImagesId}'
                                           url="/@ViewData["culture"]/Shared/Compo/ComboFileSelector"></LoadComponent>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["ProductVariants"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>
                            </div>
                        </div>
                        <div class="card-body">
                            <LoadComponent id="ProductVariantCompo"
                                           context="HttpContext"
                                           data='new viCompo_Variants {FieldName="Input.VariantId",ProductId=Model.Input.Id,SellerId=ViewData["SellerId"].ToString()}'
                                           url="/@ViewData["culture"]/User/Products/Compo/Variants"></LoadComponent>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["PostingRestrictions"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>

                            </div>
                        </div>
                        <div class="card-body" id="ProductProperties">
                            <LoadComponent id="ProductPostingRestrictionsCompo"
                                           context="HttpContext"
                                           data='new viCompo_PostingRestrictions {FieldName="Input.PostingRestrictions",ProductId=Model.Input.Id}'
                                           url="/@ViewData["culture"]/User/Products/Compo/PostingRestrictions"></LoadComponent>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mt-4">
                        <div class="card-header">
                            @Localizer["ProductDescription"]
                            <div class="card-option">
                                <div class="card-arrow-down"><i class="fa fa-angle-down"></i></div>

                            </div>
                        </div>
                        <div class="card-body">
                            <label asp-for="Input.Description"></label>
                            <div class="editor">@Html.Raw(Model.Input.Description)</div>
                            <textarea class="hidden" asp-for="Input.Description"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group frmBtnAction mt-4">
                        <button onclick="GotoBack()" type="button" class="btn btn-warning">@Localizer["GotoBack"]</button>
                        @if (Model.Input.IsDraft == true)
                        {
                            <button onclick="SaveAsDraft()" type="button" class="btn btn-info">@Localizer["SaveProductAsDraft"]</button>
                        }
                        <button onclick="SaveData()" type="button" class="btn btn-success">@Localizer["SaveProductAndCheck"]</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section styles{
    <link href="~/lib/PersianDatePicker/persian-datepicker.min.css" rel="stylesheet" />
}

@section scripts{
    <script src="~/lib/PersianDatePicker/persian-date.min.js"></script>
    <script src="~/lib/PersianDatePicker/persian-datepicker.min.js"></script>
    <script src="~/lib/CKEditor5/build/ckeditor.js"></script>
    @if (CultureInfo.CurrentCulture.Parent.Name == "fa")
    {
        <script src="~/lib/CKEditor5/build/translations/fa.js"></script>
    }

    <script>
        @if (Model.Input.IsDraft == true)
        {
            <text>
                function SaveAsDraft() {
                    $('#Input_IsDraft').val('true');
                    SaveData();
                }
            </text>
         }
            function SaveData() {
            $('#Input_Description').html(CkEditor.getData());
                setTimeout(function () {
                    SendForm('/@ViewData["culture"]/User/Products/Edit/@Model.Input.Id', 'FrmEditProdcut');
                }, 200);
        }

        function GotoBack() {
            location.href = '@ViewData["ReturnUrl"]';
        }

        $(".Date").persianDatepicker({
        format: 'YYYY/MM/DD HH:mm:ss',
            toolbox: {
            calendarSwitch: {
                enabled: false
                }
            },
            calendar: {
            persian: {
                locale: 'en'
                }
            },
            timePicker: {
            enabled: true
            }
        });

        $(document).ready(function () {
            LoadCkEditor('@CultureInfo.CurrentCulture.Parent.Name');
            LoadTopicCompo('@Model.Input.TopicId', '@Model.Input.Id');
        });

        function OnComboSelectInput_TopicId(e) {
            LoadTopicCompo(e.dataItem.Id, '@Model.Input.Id');

        }

        function LoadTopicCompo(_TopicId,_ProductId) {
            LoadComponenet('/@ViewData["Culture"]/User/Products/Compo/ComboProductProperties',
            {
            TopicId: _TopicId,
                ProductId: _ProductId
            },
            function (res) {
                $('#ProductProperties').html(res);
            });
        }
    </script>
}