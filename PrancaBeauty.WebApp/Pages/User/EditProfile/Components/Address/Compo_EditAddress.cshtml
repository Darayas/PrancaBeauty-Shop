@page "/{Culture}/User/EditProfile/Compo/EditAddress"
@model PrancaBeauty.WebApp.Pages.User.EditProfile.Components.Address.Compo_EditAddressModel

<div class="modal fade" id="EditAddress" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Localizer["EditAddress"]</h5>
            </div>
            <div class="modal-body">
                <form id="frmEditAddress" method="post" asp-antiforgery="false">
                    <input type="hidden" asp-for="Input.Id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Input.FirstName"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.LastName"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="Input.NationalCode"></label>
                                <input asp-for="Input.NationalCode" class="form-control text-left" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.PhoneNumber" for="IdInput_PhoneNumber"></label>
                                <input asp-for="Input.PhoneNumber" id="IdInput_PhoneNumber" class="form-control text-left" />
                            </div>
                        </div>
                    </div>

                    <LoadComponent url="/@ViewData["Culture"]/Shared/Compo/Region/Area"
                                   id="CompoArea"
                                   context="HttpContext"
                                   data='new viCompo_Area { CountryId=Model.Input.CountryId,CountyFieldName="Input.CountryId",ProvinceId=Model.Input.ProvinceId,ProvinceFieldName="Input.ProvinceId",CityId=Model.Input.CityId,CityFieldName="Input.CityId" }'></LoadComponent>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3">
                                <label asp-for="Input.District"></label>
                                <input asp-for="Input.District" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Input.Plaque"></label>
                                <input asp-for="Input.Plaque" class="form-control text-left" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Input.Unit"></label>
                                <input asp-for="Input.Unit" class="form-control text-left" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Input.PostalCode"></label>
                                <input asp-for="Input.PostalCode" class="form-control text-left" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Input.Address"></label>
                                <textarea asp-for="Input.Address" rows="2" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Close()">@Localizer["Close"]</button>
                <button type="button" onclick="SendForm('/@ViewData["culture"]/User/EditProfile/Compo/EditAddress','frmEditAddress')" class="btn btn-primary">@Localizer["Edit"]</button>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#IdInput_PhoneNumber').inputmask({
                regex: '@Localizer["MobilePattern"]',
                placeholder: '_'
            });

            $('#Input_NationalCode').inputmask({
                regex: '@Localizer["NationalCodePattern"]',
                placeholder: '_'
            });

            $('#Input_PostalCode').inputmask({
                regex: '@Localizer["PostalCodePattern"]',
                placeholder: '_'
            });
        });

        function Close() {
            $('#EditAddress').remove();
            $('.modal-backdrop').remove()
        }
    </script>
</div>