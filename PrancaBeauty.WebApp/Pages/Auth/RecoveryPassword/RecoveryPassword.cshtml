@page "/{culture}/Auth/RecoveryPassword"
@model PrancaBeauty.WebApp.Pages.Auth.RecoveryPassword.RecoveryPasswordModel
@{
    ViewData["Title"] = Localizer["RecoveryPassword"];
    Layout = "~/Pages/Shared/_MainLayout.cshtml";
}

<!--breadcrumbs area start-->
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">@Localizer["Home"]</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!-- customer login start -->
<div class="customer_login">
    <div class="container">
        <div class="row">
            <!--Description area start-->
            <div class="col-lg-6 col-md-6">

            </div>
            <!--Description area end-->
            <!--login area start-->
            <div class="col-lg-6 col-md-6" id="CompoRecoveryPassword">
                @if (Model.Input.Token == null)
                {
                    <LoadComponent url="/@ViewData["culture"]/Auth/RecoverPassword/Components/RecoveryByEmail" data="null" context="HttpContext"></LoadComponent>
                }
                else
                {
                    <LoadComponent url="/@ViewData["culture"]/Auth/RecoverPassword/Components/ResetPasswordByEmail" data='new viCompo_ResetPassword { Token=Model.Input.Token }' context="HttpContext"></LoadComponent>
                }
            </div>
            <!--login area start-->

        </div>
    </div>
</div>
<!-- customer login end -->
<!--brand area start-->
<div class="brand_area brand_padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="brand_container owl-carousel ">
                    <div class="single_brand">
                        <a href="#"><img src="/Main/img/brand/brand1.jpg" alt=""></a>
                    </div>
                    <div class="single_brand">
