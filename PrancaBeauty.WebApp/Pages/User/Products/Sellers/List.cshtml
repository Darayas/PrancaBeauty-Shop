@page "/{culture}/User/Product/Sellers/List/{ProductId}"
@model PrancaBeauty.WebApp.Pages.User.Products.Sellers.ListModel
@{
    ViewData["Title"] = Localizer["ProductSellerList", Model.ProductTitle];
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

@section breadcrumbs{
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/@ViewData["Culture"]">@Localizer["Home"]</a></li>
                        <li><a href="/@ViewData["Culture"]/User/Index">@Localizer["Dashboard"]</a></li>
                        <li><a href="/@ViewData["Culture"]/User/Products/List">@Localizer["ProductList"]</a></li>
                        <li>@ViewData["Title"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
    }

<script>
    function Filter()
    {
        var ItemCombo = $('#ListProductSeller').data("kendoComboBox");
        return { Text: ItemCombo.text(),ProductId:'@Model.ProductId' };
    }
</script>
<div class="row">
    <div class="col-md-12">
        <div class="k-lang">
            @(Html.Kendo()
            .Grid<vmListSellers>()
            .Name("ListProductSeller")
            .DefaultSettings(Localizer)
            .Columns(col=> {
            col.Bound(a => a.Id).Hidden().HtmlAttributes(new { @class = "RowId" }).Sortable(false);

            col.Bound(a => a).Width(50).Title(" ")
            .HtmlAttributes(new { style= "overflow: visible; text-align: center;" })
            .ClientHeaderTemplate((User.IsInRole(Roles.CanAddProduct)? "<button class='btn btn-success btn-sm' onclick='Add()'><i class='fa fa-plus'></i></button>" : "") + "<button class='btn btn-primary btn-sm ml-1 mr-1' onclick='ShowSearchModal()'><i class='fa fa-search'></i></button>")
            .ClientTemplateId("DropDownCmd");
            })
            .DataSource(ds=>ds.Ajax()
            .PageSize(10)
            .Read(read=>read.Url($"/{CultureInfo.CurrentCulture.Parent.Name}/User/Product/Sellers/List/{Model.ProductId}?handler=ReadData").Data($"Filter").Data("forgeryToken"))))
        </div>
    </div>
</div>