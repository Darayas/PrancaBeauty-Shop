@page "/{culture}/Shared/Compo/ProductSelectedPrice"
@model PrancaBeauty.WebApp.Pages.Shared.Components.Compo_ProductSelectedPricess.Compo_ProductSelectedPriceModel

<div class="price_box">
    @if (Model.Data != null)
    {
        <span class="current_price">@Model.Data.ProductPrice @Model.Data.CurrencySymbol</span>
        @if (Model.Data.ProductOldPrice != "0")
        {
            <span class="old_price">@Model.Data.ProductOldPrice @Model.Data.CurrencySymbol</span>
        }

    }else
    {
        <span class="current_price">@Localizer["indisponible"]</span>
    }
</div>