        function Add() {

        }
    </script>
}

<script>
    var _LangId;
    function OnComboSelect@("LangId")(e) {
        _LangId = e.dataItem.Id;
    }

    function Search() {
        var _FullName = $('#txtSearchFullName').val();
        var _Email = $('#txtSearchEmail').val();
        var _PhoneNumber = $('#txtSerachPhoneNumber').val();
        var _txtSort = $('#txtSort option:selected').val();

        var _Grid = $('#ListUsers').data('kendoGrid');
        _Grid.dataSource.transport.options.read.url = '/@CultureInfo.CurrentCulture.Parent.Name/User/Products/List?handler=ReadData?LangId='+_LangId;
        _Grid.dataSource.read();
        _Grid.refresh();

        ChangeUrl(_Grid.dataSource.transport.options.read.url);
    }

