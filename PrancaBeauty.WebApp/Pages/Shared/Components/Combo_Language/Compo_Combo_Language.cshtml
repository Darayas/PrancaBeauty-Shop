@page "/{culture}/Shared/Compo/ComboLanguage"
@model PrancaBeauty.WebApp.Pages.Shared.Components.Combo_Language.Compo_Combo_LanguageModel

<div class="k-lang">
    @(Html.Kendo()
          .ComboBox()
          .Name("Input.LangId")
          .HtmlAttributes(new { @class= "form-control",style="width:100%;height:35px;" })
          .Placeholder(Localizer["PleseSelect"])
          .DataTextField("NativeName")
          .DataValueField("Id")
          .Value(Model.Input.LangId)
          .DataSource(sr => {
              sr.Read(read =>
              {
                  read.Url($"/{ViewData["culture"]}/Shared/Compo/ComboLanguage?handler=Read");
              });
          }).Template("<div class='d-inline'><img src='#=FlagUrl#'/></div><div class='d-inline ml-2 mr-2'>#=NativeName#</div>"))
</div>
