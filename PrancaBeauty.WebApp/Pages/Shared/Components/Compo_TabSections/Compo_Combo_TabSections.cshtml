@page "/{culture}/Shared/Compo/ComboTabSection"
@model PrancaBeauty.WebApp.Pages.Shared.Components.Compo_TabSections.Compo_Combo_TabSectionsModel

@{
    string FieldName = Model.Input.FieldName;
    string FieldId = FieldName.Replace(".", "_").Replace("[", "_").Replace("]", "_");
}

<script>
    function onSelect@(FieldId)(e) {
        if (typeof OnComboSelect@(FieldId)=== "function")
        {
            OnComboSelect@(FieldId)(e);
        }
    }
</script>
<div class="k-lang">
    @(Html.Kendo()
          .ComboBox()
          .Name(FieldName)
          .HtmlAttributes(new { style="width:100%;height:40px;" })
          .Placeholder(Localizer["PleseSelect"])
          .DataTextField("Name")
          .DataValueField("Id")
          .Value(Model.Input.ShowcaseTabSectionId)
          .Events(a =>
          {
              a.Select($"onSelect{FieldId}");
          })
          .DataSource(sr => {
              sr.Read(read =>
              {
                  read.Url($"/{ViewData["culture"]}/Shared/Compo/ComboTabSection?handler=Read&ShowcaseTabId={Model.Input.ShowcaseTabId}&ShowcaseTabSectionId={Model.Input.ShowcaseTabSectionId}");
              });
          }).Template("<div class='d-inline ml-2 mr-2'>#=Name#</div>"))
</div>
