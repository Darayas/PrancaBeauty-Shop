@page "/{culture}/Shared/Compo/ComboFileType"
@model PrancaBeauty.WebApp.Pages.Shared.Components.Combo_FileType.Compo_ComboFileTypesModel

@{
    string FieldName = Model.Input.FieldName;
    string FieldId = FieldName.Replace(".", "_").Replace("[", "_").Replace("]", "_");
    string FieldTitle = Localizer[FieldName.Split('.').Last()];
}

<script>
    function Filter_@(FieldId)()
    {
        var ItemCombo = $('#@(FieldId)').data("kendoComboBox");
        return { Text: ItemCombo.text() };
    }
</script>

<label for="@FieldId">@FieldTitle</label>
<div class="k-lang">
    @(Html.Kendo()
          .ComboBox()
          .Name(FieldName)
          .HtmlAttributes(new { style="width:100%;height:35px;" })
          .Placeholder(Localizer["PleseSelect"])
          .DataTextField("MimeType")
          .DataValueField("Id")
          .Filter(FilterType.Contains)
          .MinLength(2)
          .Value(Model.Input.FileTypeId)
          .DataSource(sr => {
              sr.Read(read =>
              {
                  read.Url($"/{ViewData["culture"]}/Shared/Compo/ComboFileType?handler=Read").Data($"Filter_{FieldId}");
              }).ServerFiltering(true);
          }).Template("<div class='d-inline'><img style='width:24px; height:24px;' src='#=ImgUrl#'/></div><div class='d-inline ml-2 mr-2'>#=MimeType# (#=FileEx#)</div>"))
</div>