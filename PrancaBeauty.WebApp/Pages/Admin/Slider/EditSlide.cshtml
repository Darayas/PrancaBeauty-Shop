@page "/{culture}/Admin/Slider/Edit/{Id}"
@model PrancaBeauty.WebApp.Pages.Admin.Slider.EditSlideModel
@{
    ViewData["Title"] = Localizer["EditSlide"];
    Layout = "~/pages/shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/@CultureInfo.CurrentCulture.Parent.Name/admin/index">@Localizer["Dashborad"]</a></li>
                        <li class="breadcrumb-item"><a href="/@CultureInfo.CurrentCulture.Parent.Name/Admin/Slider/List">@Localizer["ListSlider"]</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <form id="frmEditSlide">
                                <input asp-for="Input.Id" type="hidden" />
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <LoadComponent id="ImagesCompo"
                                                           context="HttpContext"
                                                           data='new viCompo_FileSelector {ContainerId="ImagesCompo" ,FieldName="Input.FileId",MaxFileCount=1, MaxFileSize=2097152 /* 2 MB */,AllowedMimeType="image/jpg, image/jpeg, image/png",SelectedFilesId=Model.Input.FileId.ToLower()}'
                                                           url="/@ViewData["culture"]/Shared/Compo/ComboFileSelector"></LoadComponent>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label asp-for=Input.Title></label>
                                            <input asp-for=Input.Title class=form-control />
                                        </div>
                                        <div class="col-md-5">
                                            <label asp-for=Input.Url></label>
                                            <input asp-for=Input.Url class="form-control text-left" />
                                        </div>
                                        <div class="col-md-2">
                                            <label asp-for=Input.IsFollow></label>
                                            <select asp-for=Input.IsFollow class="form-control">
                                                <option value="true">@Localizer["Follow"]</option>
                                                <option value="false">@Localizer["NoFollow"]</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <label asp-for=Input.StartDate></label>
                                            <input asp-for=Input.StartDate class="Date form-control text-left" />
                                        </div>
                                        <div class="col-md-5">
                                            <label asp-for=Input.EndDate></label>
                                            <input asp-for=Input.EndDate class="Date form-control text-left" />
                                        </div>
                                        <div class="col-md-2">
                                            <label asp-for=Input.IsEnable></label>
                                            <select asp-for=Input.IsEnable class="form-control">
                                                <option value="true">@Localizer["Enable"]</option>
                                                <option value="false">@Localizer["Disable"]</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12 text-left">
                                            <hr />
                                            <button onclick="SendForm('/@ViewData["Culture"]/Admin/Slider/Edit/@(Model.Input.Id)', 'frmEditSlide')" type="button" class="btn btn-success">@Localizer["Save"]</button>
                                            <button onclick="GotoList()" type="button" class="btn btn-warning">@Localizer["GotoList"]</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
</div>


@section styles{
<link href="~/lib/PersianDatePicker/persian-datepicker.min.css" rel="stylesheet" />
}

@section scripts{
<script src="~/lib/PersianDatePicker/persian-date.min.js"></script>
<script src="~/lib/PersianDatePicker/persian-datepicker.min.js"></script>
<script>
    $(".Date").persianDatepicker({
            format: 'YYYY/MM/DD HH:mm:ss',
            toolbox: {
                calendarSwitch: {
                    enabled: false
                }
            },
            calendar: {
                persian: {
                    locale: 'en'
                }
            },
            timePicker: {
                enabled: true
            },
            initialValue:false
        });

    function GotoList() {
        location.href = '@ViewData["ReturnUrl"]';
    }
</script>
}